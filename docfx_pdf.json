{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "_appLogoPath": "./Content_Portal/Documentation/images/atlas_icon.png",
      "_appName": "OSIsoft Cloud Services Documentation"
    }
  ],
  "build": {
	"globalMetadata": {
		"_enableSearch": true
	},
    "content": [
      {
        "files": [
	  "Content_Portal/**/**.md",
	  "Content_Portal/**/toc.yml",
          "toc.yml",
          "**.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
            "Content_Portal/Quickstarts/images/**",
	    "Content_Portal/Documentation/images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "default",
      "_exported_templates/default/styles"
    ],
    "postProcessors": ["OcsVariableProcessor"],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  },
  
  "pdf": {
    "noStdin": true,
    "name": "OCS-Docs",
    "keepRawFiles": true,
    "content": [
      {
        "files": [
          "Content_Portal/**.md",
          "*.md",
          "pdf/*"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**",
          "**/toc.yml",
          "**/toc.md"
        ]
      },
      {
        "files": "pdf/toc.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "Content_Portal/Quickstarts/images/**",
          "Content_Portal/Documentation/images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site_pdf/**"
        ]
      }
    ],
    "dest": "_site_pdf",
    "template": [
      "pdf.default"
    ]

  }
  
}